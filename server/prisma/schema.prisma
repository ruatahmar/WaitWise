generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum QueueStatus {
  WAITING
  SERVING
  LATE
  
  MISSED
  CANCELLED
  COMPLETED
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String

  adminQueues Queue[] @relation("AdminQueues")
  queueUsers QueueUser[] 
  refreshTokens RefreshToken[]
}
model RefreshToken {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  token     String
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)

  @@index([userId])
}
model Queue {
  id          Int         @id @default(autoincrement())
  name        String
  admin       User        @relation("AdminQueues", fields: [adminId], references: [id])
  adminId     Int

  serviceSlots   Int       @default(1)
  maxSize      Int?
  turnExpiryMinutes    Int @default(5)  
  
  queueUsers  QueueUser[] 
  queueEvents QueueEvents[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now()) @updatedAt
  
  @@unique([adminId, name])
     
}
model QueueUser {
  id        Int    @id @default(autoincrement())
  queue     Queue  @relation(fields: [queueId], references: [id], onDelete: Cascade )
  queueId   Int
  user      User   @relation(fields: [userId], references: [id])
  userId    Int

  joinedAt  DateTime @default(now())
  status    QueueStatus @default(WAITING)
  priorityBoost  Int    @default(0)
  token      String    

  queueEvents QueueEvents[]
  
  servedAt   DateTime?
  expiresAt  DateTime? 
  updatedAt  DateTime   @updatedAt

  @@unique([userId, queueId])
  @@unique([queueId, token])
  @@index([queueId, status])
  @@index([queueId, status, priorityBoost, joinedAt])
}

enum QueueEventType {
  QUEUEUSER_CREATED
  QUEUEUSER_SERVED
  QUEUEUSER_COMPLETED
  QUEUEUSER_LEFT
  QUEUEUSER_LATE
  QUEUEUSER_REJOINED
  QUEUEUSER_MISSED
}

model QueueEvents {
  id            String @id @default(cuid())
  queueId       Int
  queue         Queue @relation(fields: [queueId], references: [id], onDelete: Cascade)
  
  queueUserID   Int?
  queueUser     QueueUser? @relation(fields: [queueUserID], references: [id], onDelete: Cascade)
  
  type          QueueEventType
  payload       Json?
  createdAt     DateTime @default(now())
}

